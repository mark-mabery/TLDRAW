{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "outDir": "./dist/types",
    "rootDir": "src",
    "baseUrl": "src",
    "emitDeclarationOnly": false,
    "paths": {
      "+*": ["./*"],
      "@tldraw/core": ["../vec"],
      "@tldraw/tldraw": ["../intersect"]
    }
  },
  "references": [
    {
      "path": "../tldraw"
    },
    { "path": "../core" }
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
