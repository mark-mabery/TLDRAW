{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist/types",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~*": ["./*"]
    }
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
