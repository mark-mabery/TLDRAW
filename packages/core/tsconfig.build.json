{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "src/test",
    "dist",
    "docs"
  ],
  "compilerOptions": {
    "incremental": false,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "./dist/types"
  }
}
