{
  "extends": "./tsconfig.json",
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "src/test",
    "dist",
    "docs"
  ],
  "compilerOptions": {
    "composite": false,
    "incremental": false,
    "declarationMap": true,
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "paths": {
      "+*": ["./*"],
      "@tldraw/vec": ["../vec"],
      "@tldraw/intersect": ["../intersect"]
    }
  },
  "references": [{ "path": "../vec" }, { "path": "../intersect" }]
}
