{
  "extends": "../../tsconfig.base.json",
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist/types",
    "baseUrl": "src",
    "paths": {
      "+*": ["./*"]
    }
  },
  "typedocOptions": {
    "name": "@tldraw/core",
    "theme": "default",
    "highlightTheme": "github-light",
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  }
}
