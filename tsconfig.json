{
  "composite": true,
  "extends": "./tsconfig.base.json",
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"],
  "files": [],
  "references": [{ "path": "./packages/tldraw" }, { "path": "./packages/core" }],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@tldraw/tldraw": ["./packages/tldraw/dist"],
      "@tldraw/core": ["./packages/core/dist"],
      "+*": ["./packages/core/src/*"],
      "~*": ["./packages/tldraw/src/*"]
    }
  }
}
